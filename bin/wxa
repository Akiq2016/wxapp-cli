#!/usr/bin/env node

if (process.env.ENV === 'development') {
	// https://stackoverflow.com/questions/28782656/how-to-run-node-js-app-with-es6-features-enabled
	require('babel-register')({
		"presets": ["env", "stage-0"],
		"plugins": ["transform-runtime"],
		"comments": false
	});
	require('../src/index');
} else {
	require('../lib/index');
}
